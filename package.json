  "main": "index.js",
  "type": "module",
  "scripts": {
    "tsup": "tsup --config tsup.config.ts --onSuccess \"node dist/index.js -p npm-packages --platform juejin --pkg accepts\"",
    "tsup:watch": "tsup --config tsup.config.ts --watch --onSuccess \"node dist/index.js -p npm-packages --platform juejin --pkg private\"",
    "dev:npm": "node ./build.js -p npm-packages --watch",
    "dev:ts": "node ./build.js -p type-challenges --watch",
    "dev:words": "tsup --config tsup.config.ts --watch --onSuccess \"node dist/index.js -p english-words\"",
    "dev:html": "pnpm --filter html-templates dev",
    "dev:desktop": "pnpm --filter desktop dev",
    "build": "node ./build.js",
    "build:html": "pnpm --filter html-templates build",
    "build:desktop": "pnpm --filter desktop build",
    "build:npm": "node ./build.js -p npm-packages --run",
    "build:ts": "node ./build.js -p type-challenges --run",
    "build:words": "tsup --config tsup.config.ts --onSuccess \"node dist/index.js -p english-words\"",
    "start:npm": "node ./dist/index.cjs -p npm-packages",
    "start:ts": "node ./dist/index.cjs -p type-challenges",
    "start:words": "node ./dist/index.cjs -p english-words",
    "find-deadcode": "npx ts-prune"
  },
