{
  "compilerOptions": {
    "target": "ESNext", // 指定ECMAScript目标版本
    "module": "ESNext", // 指定模块代码生成方式
    "lib": ["ESNext"], // 指定要包含在编译中的库文件。
    "noEmit": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true, // 启用项目编译
    "moduleResolution": "node", // 选择模块解析策略
    "strict": true, // 启用所有严格类型检查选项
    "esModuleInterop": true, // 允許export = x和import x = require()形式的互操作性导入
    "skipLibCheck": true, // 跳过库文件的类型检查以提高性能
    "forceConsistentCasingInFileNames": true // 禁止对大小写不一致的引用
  },
  "include": ["packages/**/*.ts", "projects/**/*.ts", "types", "./*.ts"],
  "exclude": [
    "node_modules", // 排除node_modules
    "**/node_modules/*"
  ]
}
